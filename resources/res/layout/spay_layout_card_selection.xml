<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spay_slcs_root"
    android:paddingLeft="@dimen/spay_sbscs_container_padding_horizontal"
    android:paddingTop="@dimen/spay_sbscs_container_padding_top"
    android:paddingRight="@dimen/spay_sbscs_container_padding_horizontal"
    android:paddingBottom="@dimen/spay_sbscs_container_padding_bottom"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="payTransition"
    android:paddingHorizontal="@dimen/spay_sbscs_container_padding_horizontal">
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:id="@+id/spay_slcs_actv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spay_12dp"
        android:text="@string/spay_card_selection_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Spay.CardSelection.Title"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="center"
        android:id="@+id/spay_slcs_actv_order_sum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spay_default_margin"
        app:layout_constraintBottom_toTopOf="@+id/spay_slcs_rv_cards_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spay_slcs_actv_title"
        style="@style/Spay.Card.Sum"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/spay_slcs_rv_cards_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spay_sbscs_rv_cards_list_margin_top"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constrainedHeight="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spay_slcs_actv_order_sum"/>
</androidx.constraintlayout.widget.ConstraintLayout>
