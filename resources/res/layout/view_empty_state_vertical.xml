<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center"
    android:orientation="vertical"
    android:id="@+id/empty_state_container"
    android:paddingTop="@dimen/ym_spaceXL"
    android:paddingBottom="@dimen/ym_spaceXL"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/ym_space2XL"
    android:paddingEnd="@dimen/ym_space2XL">
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/empty_icon"
        android:background="@drawable/ic_round_mask"
        android:layout_width="@dimen/empty_state_icon_big_size"
        android:layout_height="@dimen/empty_state_icon_big_size"
        android:layout_marginBottom="@dimen/ym_spaceM"
        android:scaleType="centerInside"
        android:tint="?attr/colorFadeTint"
        android:backgroundTint="?attr/colorGhostTint"/>
    <ru.yoomoney.sdk.gui.widget.text.TextBodyView
        android:ellipsize="end"
        android:gravity="center"
        android:id="@+id/empty_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="4"
        style="@style/Text.Body.Ghost"/>
</LinearLayout>
