<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:background="@drawable/bg_new_widget"
    android:padding="@dimen/widget_margin"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/open_door_widget"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/ic_buttonclose"/>
    <TextView
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/text_small_widget"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:text="Дверь закрыта"
        android:maxLines="2"
        android:minLines="2"
        android:layout_centerVertical="true"
        android:paddingStart="5dp"
        android:paddingEnd="0dp"
        android:layout_toEndOf="@+id/open_door_widget"
        style="@style/TextView.Body2"/>
</RelativeLayout>
