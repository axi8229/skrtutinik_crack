<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_country_phone_code_0"
    android:background="?attr/selectableItemBackground"
    android:paddingLeft="@dimen/padding_default"
    android:paddingRight="@dimen/padding_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/padding_default">
    <TextView
        android:textSize="@dimen/text_main"
        android:textColor="@color/black"
        android:id="@+id/tv_country_name_item"
        android:tag="binding_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toStartOf="@+id/tv_selected_category_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/text_main"
        android:textColor="@color/sputnik_black"
        android:gravity="end"
        android:id="@+id/tv_selected_category_title"
        android:tag="binding_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_country_name_item"
        app:layout_constraintTop_toTopOf="@+id/tv_country_name_item"/>
    <View
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_country_name_item"
        style="@style/main_divider_style"/>
</androidx.constraintlayout.widget.ConstraintLayout>
