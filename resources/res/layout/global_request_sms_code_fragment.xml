<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@string/input_code"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/login_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium_plus"
            android:layout_centerVertical="true"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <TextView
                android:gravity="center"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_request_code_title"
                style="@style/TextLarge"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorTextDarkHint"
                android:gravity="center"
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:text="@string/login_request_code_info"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                app:fontFamily="@font/raleway_medium"/>
            <View
                android:id="@+id/viewClearFocus"
                android:background="@null"
                android:focusable="true"
                android:clickable="true"
                android:layout_width="1dp"
                android:layout_height="1dp"/>
            <TextView
                android:textSize="@dimen/text_main"
                android:textColor="@color/error_code_text"
                android:gravity="center"
                android:id="@+id/tvErrorCode"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/login_request_code_error"
                app:fontFamily="@font/opensans_regular"/>
            <TextView
                android:textSize="17sp"
                android:textColor="#707070"
                android:gravity="center"
                android:id="@+id/tvWait"
                android:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="@string/login_request_code_wait"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                app:fontFamily="@font/opensans_regular"/>
            <TextView
                android:textSize="@dimen/text_main"
                android:textColor="@color/colorBluePrimary"
                android:gravity="center"
                android:id="@+id/btnResendCode"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:text="@string/login_request_code_resend"
                app:fontFamily="@font/raleway_medium"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/loader"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/login_input_container"
            app:layout_constraintTop_toTopOf="parent">
            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
