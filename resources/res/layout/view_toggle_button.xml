<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="horizontal"
    android:id="@+id/rootLayout"
    android:background="@drawable/background_button_pink_12"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/margin_small"
    android:paddingEnd="@dimen/margin_small">
    <ImageView
        android:id="@+id/iv_icon_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification_warning_m"
        android:layout_marginStart="@dimen/margin_small"
        app:tint="@android:color/white"/>
    <TextView
        android:textColor="@android:color/white"
        android:id="@+id/tv_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Сообщить о проблеме"
        style="@style/TextView.Body2"/>
    <ImageView
        android:id="@+id/iv_icon_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_notification_warning_m"
        android:layout_marginStart="@dimen/margin_small"
        app:tint="@android:color/white"/>
</LinearLayout>
