<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.shopgun.android.zoomlayout.ZoomLayout
        android:id="@+id/layout_zoom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxZoom="12"
        app:minZoom="1"
        app:transformation="centerInside"
        app:zoomEnabled="true">
        <org.webrtc.SurfaceViewRenderer
            android:layout_gravity="center"
            android:id="@+id/player_webrtc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </com.shopgun.android.zoomlayout.ZoomLayout>
    <com.shopgun.android.zoomlayout.ZoomLayout
        android:id="@+id/layout_zoom2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:maxZoom="12"
        app:minZoom="1"
        app:transformation="centerInside"
        app:zoomEnabled="true">
        <com.google.android.exoplayer2.ui.PlayerView
            android:layout_gravity="center"
            android:id="@+id/player_exo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:show_buffering="never"
            app:use_controller="false"/>
    </com.shopgun.android.zoomlayout.ZoomLayout>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/videoLoader"
        android:background="@color/black"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateTint="@color/white"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_loader"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextView.Body1"/>
    </LinearLayout>
    <HorizontalScrollView
        android:id="@+id/hs_preview"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/preview"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"/>
    </HorizontalScrollView>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/previewError"
        android:background="#202020"
        android:padding="20dp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_error_load_preview"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/error_load_preview_text"
            android:gravity="center"
            android:id="@+id/tv_error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            app:fontFamily="@font/opensans_regular"/>
    </LinearLayout>
    <View
        android:id="@+id/view_dim_subscription_required"
        android:background="@color/dim_color"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:id="@+id/layout_camera_locked"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_door_closed_outline"
            android:tint="@color/white"/>
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/tv_subscription_required"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="77dp"
            android:layout_marginTop="@dimen/margin_small_plus"
            android:layout_marginRight="77dp"
            android:layout_marginHorizontal="77dp"
            style="@style/TextView.Body2"/>
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:id="@+id/btn_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_start_end"
            android:layout_marginTop="31dp"
            android:layout_marginRight="@dimen/margin_start_end"
            android:layout_marginBottom="@dimen/margin_default"
            android:minWidth="254dp"
            android:text="Подключить за 69"
            android:layout_marginHorizontal="@dimen/margin_start_end"
            style="@style/Button.Gradient"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/btn_back"
        android:padding="@dimen/padding_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/ic_back_arrow_new"
        android:tint="@color/white"
        android:rotation="180"
        android:layout_marginStart="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
