        android:layout_gravity="center"
        android:id="@+id/shopping_card_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/ym_space2XS"
        android:layout_marginTop="@dimen/ym_spaceM"
        android:layout_marginRight="@dimen/ym_space2XS"
        android:layout_marginBottom="@dimen/ym_spaceM"
        android:scaleType="fitCenter"
        android:layout_marginHorizontal="@dimen/ym_space2XS"
        android:layout_marginVertical="@dimen/ym_spaceM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
