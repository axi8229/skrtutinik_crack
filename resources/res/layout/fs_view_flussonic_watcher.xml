<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <FrameLayout
        android:id="@+id/fs_player_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <flussonic.watcher.sdk.presentation.player.exo.FlussonicPlayerView
            android:id="@+id/fs_player_view"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/fs_error_pause_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/fs_error_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fs_broken_camera_large"/>
        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_gravity="center"
            android:id="@+id/fs_pause_btn"
            android:background="@null"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/fs_btn_pause"/>
    </FrameLayout>
    <me.zhanghai.android.materialprogressbar.MaterialProgressBar
        android:id="@+id/fs_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_alignParentTop="true"
        app:mpb_indeterminateTint="@color/fs_progress_bar"
        app:mpb_progressStyle="horizontal"
        app:mpb_useIntrinsicPadding="false"
        style="@style/Widget.MaterialProgressBar.ProgressBar.Horizontal.NoPadding"/>
    <flussonic.watcher.sdk.presentation.timeline.FlussonicTimelineView
        android:id="@+id/fs_timeline_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>
</merge>
