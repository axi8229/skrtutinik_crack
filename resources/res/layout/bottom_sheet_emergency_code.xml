<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_gravity="center"
            android:background="@drawable/background_bottom_sheet_drag_handle"
            android:layout_width="33dp"
            android:layout_height="4dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/background_bottom_sheet"
            android:paddingTop="@dimen/padding_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small">
            <ImageView
                android:id="@+id/iv_error"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="43dp"
                android:src="@drawable/ic_no_connection"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textSize="@dimen/text_title_2"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_title"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:paddingVertical="0dp"
                app:layout_constraintTop_toBottomOf="@+id/iv_error"
                style="@style/TextView.Header1"/>
            <TextView
                android:textSize="@dimen/text_main"
                android:textColor="@color/track_gray"
                android:gravity="center"
                android:id="@+id/sub_title"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:paddingVertical="0dp"
                app:layout_constraintEnd_toEndOf="@+id/card_layout"
                app:layout_constraintStart_toStartOf="@+id/card_layout"
                app:layout_constraintTop_toBottomOf="@+id/tv_title"
                style="@style/TextView.Body2"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/card_layout"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="@dimen/margin_default"
                android:layout_marginHorizontal="40dp"
                android:layout_marginVertical="@dimen/margin_default"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@+id/sub_title">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="36sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/tv_code"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:letterSpacing="0.2"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/share_button"
                        app:layout_constraintEnd_toStartOf="@+id/share_button"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TextView.Header2"/>
                    <ImageView
                        android:id="@+id/share_button"
                        android:background="@drawable/circle_ripple"
                        android:padding="7dp"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_outline_share_24"
                        android:layout_marginEnd="@dimen/margin_large"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/track_gray"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <com.sputnik.common.ui.view.ToggleStateButton
                android:id="@+id/btn_report"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="40dp"
                android:layout_marginHorizontal="40dp"
                app:layout_constraintEnd_toEndOf="@+id/card_layout"
                app:layout_constraintStart_toStartOf="@+id/card_layout"
                app:layout_constraintTop_toBottomOf="@+id/card_layout"/>
            <TextView
                android:textColor="@color/track_gray"
                android:gravity="center"
                android:id="@+id/tv_company_contacts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default_plus"
                android:layout_marginBottom="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_report"
                style="@style/TextView.Body2"/>
            <TextView
                android:textSize="@dimen/text_14"
                android:textColor="@color/black"
                android:id="@+id/tv_company_contacts_info"
                android:padding="0dp"
                android:visibility="gone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginBottom="@dimen/margin_large"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/btn_report"
                app:layout_constraintStart_toStartOf="@+id/btn_report"
                app:layout_constraintTop_toBottomOf="@+id/btn_report"
                style="@style/TextView.Body3"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>
