<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_main"
    android:background="@color/white"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/coordinatorLayout">
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_1"
            android:paddingLeft="@dimen/margin_start_end"
            android:paddingRight="@dimen/margin_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/margin_start_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:textColor="@color/sputnik_header_black"
                android:id="@+id/tv_title1"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="0dp"
                style="@style/TextView.Header1.Regular"/>
            <TextView
                android:textColor="@color/sputnik_header_black"
                android:id="@+id/tv_title2"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.Header1.Regular"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_features"
            android:paddingLeft="@dimen/margin_start_end"
            android:paddingRight="@dimen/margin_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="@dimen/margin_start_end"
            app:layout_constraintTop_toBottomOf="@+id/layout_1"/>
        <ImageView
            android:id="@+id/imageView"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blob"
            android:alpha="0.3"
            android:elevation="-1dp"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_features">
            <TextView
                android:textColor="@color/sputnik_header_black"
                android:id="@+id/tv_title_sub"
                android:paddingLeft="@dimen/margin_start_end"
                android:paddingRight="@dimen/margin_start_end"
                android:paddingBottom="0dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingEnd="0dp"
                android:paddingHorizontal="@dimen/margin_start_end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextView.Header1.Regular"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_features_second"
            android:paddingLeft="@dimen/margin_start_end"
            android:paddingRight="@dimen/margin_start_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:paddingHorizontal="@dimen/margin_start_end"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_attention"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_start_end"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_start_end"
            android:layout_marginHorizontal="@dimen/margin_start_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layout_features_second">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout3"
                android:background="@drawable/background_transparent_card_12"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:alpha="0.05"
                android:layout_marginHorizontal="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginBottom="@dimen/margin_medium"
                android:src="@drawable/ic_alert_outline"
                android:tint="@color/sputnik_yellow"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginVertical="@dimen/margin_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:textColor="@color/sputnik_black"
                android:id="@+id/tv_attention"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default"
                android:fontFamily="@font/opensans_regular"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="6dp"
                android:layout_marginVertical="@dimen/margin_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView2"
                app:layout_constraintTop_toTopOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
            android:id="@+id/btn_anchor"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_medium"
            app:layout_constraintTop_toBottomOf="@+id/layout_attention"/>
        <TextView
            android:textColorLink="@color/sputnik_green"
            android:gravity="center"
            android:id="@+id/tv_agreement"
            android:paddingLeft="@dimen/margin_start_end"
            android:paddingTop="@dimen/padding_default"
            android:paddingRight="@dimen/margin_start_end"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:translationY="16dp"
            android:paddingHorizontal="@dimen/margin_start_end"
            app:layout_constraintTop_toBottomOf="@+id/btn_anchor"
            style="@style/TextView.Body2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
