<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <FrameLayout
        android:id="@+id/left_image_container"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ru.yoomoney.sdk.gui.widget.text.TextBodyView
        android:ellipsize="end"
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_marginStart="@dimen/ym_spaceM"
        android:layout_marginEnd="@dimen/ym_spaceXS"
        app:layout_constraintEnd_toStartOf="@+id/value"
        app:layout_constraintStart_toEndOf="@+id/left_image_container"
        app:layout_goneMarginEnd="0dp"
        app:layout_goneMarginLeft="0dp"
        app:layout_goneMarginStart="0dp"
        style="?attr/ym_TitleTextAppearance"/>
    <ru.yoomoney.sdk.gui.widget.text.TextBodyView
        android:ellipsize="end"
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        style="?attr/ym_ValueTextAppearance"/>
    <ru.yoomoney.sdk.gui.widget.text.TextCaption1View
        android:ellipsize="end"
        android:id="@+id/sub_title"
        android:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ym_space3XS"
        android:layout_marginEnd="@dimen/ym_spaceXS"
        app:layout_constraintEnd_toStartOf="@+id/sub_value"
        app:layout_constraintStart_toStartOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title"
        app:layout_goneMarginEnd="0dp"
        style="?attr/ym_SubtitleTextAppearance"/>
    <ru.yoomoney.sdk.gui.widget.text.TextCaption1View
        android:ellipsize="end"
        android:id="@+id/sub_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ym_space3XS"
        android:maxLines="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title"
        style="?attr/ym_SubvalueTextAppearance"/>
</merge>
