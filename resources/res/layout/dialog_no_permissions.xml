<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/overlay_mode_title"/>
            <TextView
                android:textSize="19sp"
                android:textColor="@color/black"
                android:id="@+id/tv_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/overlay_mode_message"/>
            <View
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginBottom="@dimen/margin_default"
                style="@style/main_divider_style"/>
            <LinearLayout
                android:orientation="horizontal"
                android:id="@+id/layout_buttons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:padding="18dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp">
                    <TextView
                        android:textSize="17sp"
                        android:textColor="@color/sputnik_blue"
                        android:gravity="center"
                        android:id="@+id/btn_decline"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/overlay_mode_decline"
                        app:fontFamily="@font/jost_medium"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:background="@drawable/blue_button_background"
                    android:padding="18dp"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp">
                    <TextView
                        android:textSize="17sp"
                        android:textColor="@color/white"
                        android:gravity="center"
                        android:id="@+id/btn_accept"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/overlay_mode_accept"
                        app:fontFamily="@font/jost_medium"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
