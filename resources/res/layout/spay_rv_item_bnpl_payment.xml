<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/spay_slo_tv_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spay_4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SpayAmountTextStyle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="start|center_vertical"
        android:id="@+id/spay_slo_tv_amount_bnpl_total"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/spay_slo_tv_amount"
        app:layout_constraintTop_toBottomOf="@+id/spay_slo_tv_amount"
        style="@style/SpayOrderBottomsheet.BnplTotalSum"/>
</androidx.constraintlayout.widget.ConstraintLayout>
