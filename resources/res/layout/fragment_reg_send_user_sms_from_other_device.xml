<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_splash_screen"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <FrameLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:id="@+id/card_rv"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_default"
            app:cardCornerRadius="12dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default">
                <TextView
                    android:textSize="@dimen/text_title_2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/TextView.Header1"/>
                <com.chaos.view.PinView
                    android:textSize="@dimen/text_title_1"
                    android:textColor="@color/black"
                    android:layout_gravity="center"
                    android:id="@+id/view_pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:itemBackground="@drawable/background_focused_default_input"
                    android:text="1234"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:importantForAutofill="no"
                    android:forceDarkAllowed="false"
                    app:fontFamily="@font/opensans_semibold"
                    app:itemCount="4"
                    app:itemHeight="52dp"
                    app:itemSpacing="8dp"
                    app:itemWidth="52dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    app:viewType="none"
                    style="@style/PinWidget.PinView"/>
                <TextView
                    android:textSize="@dimen/text_title_2"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:id="@+id/tv_title2"
                    android:paddingBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/view_pin"
                    style="@style/TextView.Header1"/>
                <TextView
                    android:textSize="@dimen/text_main"
                    android:textColorLink="@color/sputnik_pink"
                    android:gravity="center"
                    android:id="@+id/tv_description2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title2"
                    style="@style/TextView.Body2"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:textSize="@dimen/text_main"
                    android:gravity="center"
                    android:id="@+id/btn_done"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingVertical="14dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_description2"
                    style="@style/Button.PinkButton.Radius12"/>
                <TextView
                    android:textSize="@dimen/text_main"
                    android:gravity="center"
                    android:id="@+id/tv_description"
                    android:paddingBottom="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/btn_done"
                    style="@style/TextView.Body2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>
