<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_default"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:windowSoftInputMode="adjustResize|stateHidden"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:id="@+id/btn_close"
                android:background="@android:color/transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_start_end"
                android:src="@drawable/ic_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <androidx.core.widget.NestedScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:fillViewport="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_close">
                <LinearLayout
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/margin_large"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/margin_small"
                    app:layout_constraintBottom_toTopOf="@+id/btnApply"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_close">
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:id="@+id/tv_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Push notifications tools"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TextView.Header2"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:paddingTop="@dimen/margin_small"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:layout_marginHorizontal="@dimen/margin_start_end"
                        android:paddingVertical="@dimen/margin_small">
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="Market"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:rowCount="5"
                            android:columnCount="2">
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Market"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_subs"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Subs"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_services"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Services"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_items"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Items"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_standard"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Standard"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_premium"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Premium"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_to_yoo_standard"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="To Yoo"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_card"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Card"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_standard_payment"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Payment"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                        </GridLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="Market Features"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:rowCount="5"
                            android:columnCount="2">
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_ble"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="BLE"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_accelerated_loading"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Loading"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_digital_keys"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Digital Keys"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_licensed_keys"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Licensed Keys"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_history"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="History"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_archive"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Archive"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_extra_cameras"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Cameras"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_alice"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Alice"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_feature_multi_address"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Multi Address"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                        </GridLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="Market Items"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:rowCount="1"
                            android:columnCount="2">
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_items_licensed_keys"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Licensed Keys"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_market_items_yandex_catalog"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Yandex Catalog"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                        </GridLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="Main Features"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:rowCount="5"
                            android:columnCount="2">
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_profile"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Profile"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_visits"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Visits"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_service_payments"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Payments"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_family"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Family"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_licensed_keys"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Licensed Keys"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_notifications"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Notifications"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_cameras_gallery"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Gallery"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_services_ble"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="BLE"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_yandex_connect_alice"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Yandex Alice"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                        </GridLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="About"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:rowCount="2"
                            android:columnCount="2">
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_about_company"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Company"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_about_app"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="App"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_about_company_contacts"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Contacts"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_support_chat"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Support"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                        </GridLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="FAQ"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:rowCount="2"
                            android:columnCount="2">
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_faq"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="FAQ"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_faq_category"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Category"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_faq_question"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Question"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_faq_subcategory"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Subcategory"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                        </GridLayout>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="Other"/>
                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:rowCount="1"
                            android:columnCount="2">
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_back"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Back"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                            <Button
                                android:textSize="12sp"
                                android:id="@+id/btn_push_emergency_code"
                                android:padding="0dp"
                                android:layout_width="0dp"
                                android:layout_height="40dp"
                                android:layout_margin="2dp"
                                android:text="Emergency"
                                android:layout_columnWeight="1"
                                style="@style/Button.BlueButton.Radius12"/>
                        </GridLayout>
                        <View
                            android:background="@color/colorDivider"
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/margin_default"/>
                        <TextView
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text="Custom Deeplink"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:textColor="@color/black"
                            android:gravity="start|top"
                            android:id="@+id/et_notification_id"
                            android:background="@drawable/bg_comment"
                            android:paddingLeft="@dimen/padding_default"
                            android:paddingTop="10dp"
                            android:paddingRight="@dimen/padding_default"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text=""
                            android:hint="ID уведомления"
                            android:inputType="number"
                            android:paddingHorizontal="@dimen/padding_default"
                            android:paddingVertical="10dp"
                            android:importantForAutofill="no"
                            style="@style/TextView.Body2"/>
                        <Button
                            android:id="@+id/btn_push_notification_details"
                            android:paddingLeft="@dimen/padding_default"
                            android:paddingTop="10dp"
                            android:paddingRight="@dimen/padding_default"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="Push notification details"
                            android:paddingHorizontal="@dimen/padding_default"
                            android:paddingVertical="10dp"
                            style="@style/Button.BlueButton.Radius12"/>
                        <androidx.appcompat.widget.AppCompatEditText
                            android:textColor="@color/black"
                            android:gravity="start|top"
                            android:id="@+id/et_notification_deeplink"
                            android:background="@drawable/bg_comment"
                            android:paddingLeft="@dimen/padding_default"
                            android:paddingTop="10dp"
                            android:paddingRight="@dimen/padding_default"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_default"
                            android:text=""
                            android:hint="Deeplink (profile, market, etc)"
                            android:inputType="textUri"
                            android:paddingHorizontal="@dimen/padding_default"
                            android:paddingVertical="10dp"
                            android:importantForAutofill="no"
                            style="@style/TextView.Body2"/>
                        <Button
                            android:id="@+id/btn_push_notification_with_deeplink"
                            android:paddingLeft="@dimen/padding_default"
                            android:paddingTop="10dp"
                            android:paddingRight="@dimen/padding_default"
                            android:paddingBottom="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/margin_small"
                            android:text="Push notification"
                            android:paddingHorizontal="@dimen/padding_default"
                            android:paddingVertical="10dp"
                            style="@style/Button.BlueButton.Radius12"/>
