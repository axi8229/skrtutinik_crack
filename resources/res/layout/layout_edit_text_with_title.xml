<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_start_end"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_start_end"
    android:layout_marginHorizontal="@dimen/margin_start_end">
    <TextView
        android:textSize="12sp"
        android:textColor="@color/sputnik_black"
        android:id="@+id/tv_title"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/TextView.Body1"/>
    <EditText
        android:id="@+id/et_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:maxLines="1"
        android:inputType="text"
        style="@style/EditText"/>
</LinearLayout>
