<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="@dimen/ym_spaceXS"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/content_container"
        android:background="@drawable/bg_rounded_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ru.yoomoney.sdk.gui.widget.text.TextHeadline1View
            android:id="@+id/title"
            android:paddingTop="@dimen/ym_spaceS"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ym_spaceM"
            style="@style/Text.Headline1.Secondary"/>
        <ru.yoomoney.sdk.gui.widget.ContentScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/items_container"
                android:paddingTop="@dimen/ym_spaceXS"
                android:paddingBottom="@dimen/ym_spaceXS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </ru.yoomoney.sdk.gui.widget.ContentScrollView>
    </LinearLayout>
</FrameLayout>
