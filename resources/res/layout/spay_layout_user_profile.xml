<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/spay_userprofile_layout_margin_horizontal"
    android:paddingTop="@dimen/spay_userprofile_layout_margin_large"
    android:paddingRight="@dimen/spay_userprofile_layout_margin_horizontal"
    android:paddingBottom="@dimen/spay_userprofile_layout_margin_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/spay_bottom_sheet_common_height"
    android:transitionName="payTransition"
    android:paddingHorizontal="@dimen/spay_userprofile_layout_margin_horizontal">
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/spay_slup_siv_user_icon"
        android:layout_width="@dimen/spay_userprofile_layout_user_icon_size"
        android:layout_height="@dimen/spay_userprofile_layout_user_icon_size"
        android:layout_marginBottom="@dimen/spay_userprofile_layout_margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/spay_slup_tv_user_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:shapeAppearanceOverlay="@style/SpayCornerSize_50"/>
    <TextView
        android:gravity="center"
        android:id="@+id/spay_slup_tv_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/spay_slup_mb_btn_pay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/SpayUserProfile.Name"/>
    <TextView
        android:gravity="center"
        android:id="@+id/spay_slup_tv_user_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spay_userprofile_layout_margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spay_slup_tv_user_name"
        style="@style/SpayUserProfile.Text"/>
    <TextView
        android:gravity="center"
        android:id="@+id/spay_slup_tv_user_mail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spay_slup_tv_user_phone"
        style="@style/SpayUserProfile.Text"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/spay_slup_mb_btn_pay"
        android:layout_marginTop="@dimen/spay_userprofile_layout_margin_large"
        android:text="@string/spay_userprofile_btn_pay_label"
        app:layout_constraintBottom_toTopOf="@+id/spay_slup_mb_btn_quit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/SpayGreenButton"/>
    <com.google.android.material.button.MaterialButton
        android:id="@+id/spay_slup_mb_btn_quit"
        android:text="@string/spay_userprofile_btn_quit_label"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="@style/SpayAbortTransparentButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
