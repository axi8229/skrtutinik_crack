<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#4df5fefe"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">
    <ImageView
        android:textSize="@dimen/text_title_2"
        android:textColor="@color/sputnik_header_black"
        android:layout_gravity="center"
        android:id="@+id/iv_logo"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_medium"
        android:src="@drawable/ic_gorserv_electric_appliance"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/text_title_2"
        android:textColor="@color/sputnik_header_black"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_gorserv_title"
        android:padding="0dp"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/margin_small_plus"
        android:layout_marginRight="@dimen/margin_start_end"
        android:layout_marginHorizontal="@dimen/margin_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_logo"
        style="@style/TextView.Body2"/>
    <TextView
        android:textSize="@dimen/text_title_2"
        android:textColor="@color/sputnik_header_black"
        android:gravity="center"
        android:layout_gravity="center"
        android:id="@+id/tv_gorserv_subtitle"
        android:padding="0dp"
        android:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_start_end"
        android:layout_marginTop="@dimen/margin_small_plus"
        android:layout_marginRight="@dimen/margin_start_end"
        android:layout_marginHorizontal="@dimen/margin_start_end"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gorserv_title"
        style="@style/TextView.Body1"/>
</androidx.constraintlayout.widget.ConstraintLayout>
