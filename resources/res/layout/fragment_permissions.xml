<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:id="@+id/serviceLoader"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ScrollView
        android:id="@+id/viewMain"
        android:visibility="visible"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_bluetooth_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_gps_service"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_notifications_permission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_location_permission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_background_location_permission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_nearby_devices_permission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_whitelist_permission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <com.sputnik.common.ui.view.CheckBoxPreferenceView
                    android:id="@+id/pref_display_over_apps_permission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/layout_background_work"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_start_end"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginRight="@dimen/margin_start_end"
                    android:layout_marginHorizontal="@dimen/margin_start_end">
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:id="@+id/tv_background_work_title"
                        android:padding="0dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TextView.Body2"/>
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:id="@+id/tv_background_work_subtitle"
                        android:padding="0dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small_plus"
                        android:layout_marginBottom="@dimen/margin_small_plus"
                        android:layout_marginVertical="@dimen/margin_small_plus"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tv_background_work_title"
                        app:layout_constraintTop_toBottomOf="@+id/tv_background_work_title"
                        style="@style/TextView.Body3"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_open_system_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_background_work_subtitle"
                        style="@style/Button.BlueButton.Radius12"/>
                    <View
                        android:background="@color/color_divider"
                        android:layout_width="wrap_content"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_default"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/btn_open_system_settings"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
