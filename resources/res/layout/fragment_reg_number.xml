<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_splash_screen"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/root_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin_default">
        <TextView
            android:textColor="@color/white"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1. Привяжем телефон"
            app:layout_constraintBottom_toTopOf="@+id/card_rv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/TextView.Header1"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/card_rv"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:layout_marginVertical="@dimen/margin_default"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toTopOf="@+id/btn_accept"
            app:layout_constraintTop_toBottomOf="@+id/title">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default">
                <ImageView
                    android:id="@+id/iv_enter_phone"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/illustration_mascotte_settings"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textColor="@color/sputnik_black"
                    android:id="@+id/tv_enter_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="@+id/iv_enter_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_enter_phone"
                    app:layout_constraintTop_toTopOf="@+id/iv_enter_phone"
                    style="@style/TextView.Body1"/>
                <TextView
                    android:id="@+id/tv_title_phone"
                    android:paddingLeft="0dp"
                    android:paddingTop="5dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:paddingHorizontal="0dp"
                    android:paddingVertical="5dp"
                    app:layout_constraintBottom_toTopOf="@+id/l_enter_phone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iv_enter_phone"
                    style="@style/TextView.Body3"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/l_enter_phone"
                    android:background="@drawable/background_focused_default_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_phone">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_edit_country_code"
                        android:padding="6dp"
                        android:focusable="true"
                        android:focusableInTouchMode="false"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+7"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TextView.Body2"/>
                    <View
                        android:id="@+id/v_vertical_divider"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_country_code"
                        app:layout_constraintStart_toEndOf="@+id/tv_edit_country_code"
                        app:layout_constraintTop_toTopOf="@+id/tv_edit_country_code"
                        style="@style/vertical_divider_style"/>
                    <EditText
                        android:id="@+id/et_enter_phone"
                        android:background="@null"
                        android:padding="6dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_edit_country_code"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/v_vertical_divider"
                        app:layout_constraintTop_toTopOf="@+id/tv_edit_country_code"
                        style="@style/TextView.Body2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textColor="@color/sputnik_black"
                    android:textColorLink="@color/sputnik_blue"
                    android:id="@+id/tv_licences"
                    android:padding="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    app:layout_constraintTop_toBottomOf="@+id/l_enter_phone"
                    style="@style/TextView.Body1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.appcompat.widget.AppCompatButton
            android:textColor="@color/white"
            android:id="@+id/btn_accept"
            android:layout_marginBottom="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/card_rv"
            style="@style/Button.BlueButton.Radius12"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
