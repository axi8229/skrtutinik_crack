<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/layout_coordinator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_title_2"
                android:textColor="@color/large_text"
                android:id="@+id/tv_cancel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextView.Title1.Bold"/>
            <ImageView
                android:id="@+id/iv_mascotte"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:src="@drawable/illustration_mascotte_very_good"
                app:layout_constraintBottom_toBottomOf="@+id/tv_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cancel_title"/>
            <TextView
                android:id="@+id/tv_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/iv_mascotte"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_mascotte"
                app:layout_constraintTop_toTopOf="@+id/iv_mascotte"
                style="@style/TextView.Body2"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_apply"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginHorizontal="@dimen/margin_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_description"
                style="@style/Button.BlueButton"/>
            <androidx.appcompat.widget.AppCompatButton
                android:enabled="true"
                android:textColor="@color/track_gray"
                android:id="@+id/btn_reject"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="10dp"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginHorizontal="@dimen/margin_default"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_apply"
                style="@style/Button.TransparentButton"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</ScrollView>
