<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <ScrollView
        android:id="@+id/view_main"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_medium"
        app:layout_constraintBottom_toTopOf="@+id/btn_share_or_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:paddingBottom="@dimen/padding_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_default"
            android:layout_marginRight="@dimen/margin_default"
            android:layout_marginHorizontal="@dimen/margin_default">
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l_date_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_payment_date"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="0dp"
                    style="@style/TextView.Body2"/>
                <EditText
                    android:id="@+id/et_payment_date"
                    android:importantForAutofill="no"
                    style="@style/EditText.Disabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/l_date_payment">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_company"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="0dp"
                    style="@style/TextView.Body2"/>
                <EditText
                    android:id="@+id/et_company"
                    android:drawableEnd="@drawable/ic_question_outline"
                    android:importantForAutofill="no"
                    style="@style/EditText.Disabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l_account_bill"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/l_company">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_account_number"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="0dp"
                    style="@style/TextView.Body2"/>
                <EditText
                    android:id="@+id/et_account_bill"
                    android:importantForAutofill="no"
                    style="@style/EditText.Disabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/l_account_bill">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_address"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="0dp"
                    style="@style/TextView.Body2"/>
                <EditText
                    android:id="@+id/et_address"
                    android:importantForAutofill="no"
                    style="@style/EditText.Disabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l_sum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/l_address">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_amount"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="0dp"
                    style="@style/TextView.Body2"/>
                <EditText
                    android:id="@+id/et_sum"
                    android:importantForAutofill="no"
                    style="@style/EditText.Disabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l_payment_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/l_sum">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_payment_method"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="0dp"
                    style="@style/TextView.Body2"/>
                <EditText
                    android:id="@+id/et_payment_method"
                    android:importantForAutofill="no"
                    style="@style/EditText.Disabled"/>
            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/l_commission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/l_payment_method">
                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tv_comission"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:paddingBottom="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="0dp"
                    style="@style/TextView.Body2"/>
                <EditText
                    android:id="@+id/et_reason"
                    android:importantForAutofill="no"
                    style="@style/EditText.Disabled"/>
            </LinearLayout>
            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:drawablePadding="0dp"
                android:paddingStart="0dp"
                app:drawableStartCompat="@drawable/ic_file"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/l_commission"
                style="@style/TextView.Body2"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <com.sputnik.common.ui.view.SettingsMenuView
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/btn_share_or_save"
        android:background="?attr/selectableItemBackground"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginBottom="@dimen/margin_medium"
        android:paddingStart="0dp"
        android:layout_marginHorizontal="@dimen/margin_default"
        app:image="@drawable/ic_file"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <ProgressBar
        android:id="@+id/pb_loader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/sputnik_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
