<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextView.Header2"/>
    <TextView
        android:id="@+id/tv_notice"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        style="@style/TextView.Body3"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:id="@+id/btn_apply"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="@dimen/margin_small"
        android:layout_marginHorizontal="12dp"
        android:layout_marginVertical="@dimen/margin_small"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_notice"
        style="@style/Button.BlueButton"/>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/sputnik_pink"
        android:gravity="center"
        android:id="@+id/tv_setup_later"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="@dimen/margin_default"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_apply"
        style="@style/Button.TransparentButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
