<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_gravity="end|bottom"
        android:id="@+id/shopping_card_image"
        android:layout_width="0dp"
        android:layout_height="@dimen/shopping_card_small_image_height"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shopping_card_title"
        app:layout_constraintVertical_bias="1"/>
    <ru.yoomoney.sdk.gui.widget.text.TextCaption1View
        android:ellipsize="end"
        android:id="@+id/shopping_card_title"
        android:padding="@dimen/shopping_card_small_padding"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Text.Caption1.Medium"/>
</androidx.constraintlayout.widget.ConstraintLayout>
