<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <size
                android:height="28dp"
                android:width="40dp"/>
            <solid
                android:width="1dp"
                android:color="@color/sputnik_blue"/>
            <corners android:radius="36dp"/>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <size
                android:height="28dp"
                android:width="40dp"/>
            <solid
                android:width="1dp"
                android:color="@color/sputnik_black"/>
            <corners android:radius="36dp"/>
        </shape>
    </item>
</selector>
