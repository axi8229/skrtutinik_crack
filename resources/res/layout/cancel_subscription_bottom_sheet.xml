<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_cancel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/cancel_subscription_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextView.Header2"/>
    <TextView
        android:textColor="@color/black"
        android:id="@+id/tv_subtitle"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_subscription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_cancel_title"
        style="@style/TextView.Body2"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_subscription_services"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_subtitle"/>
    <View
        android:id="@+id/divider"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rv_subscription_services"
        style="@style/main_divider_style"/>
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_refund"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        app:layout_constraintTop_toBottomOf="@+id/divider">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_refund"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/refund_subscription"
            android:layout_weight="50"
            style="@style/TextView.Body2"/>
        <TextView
            android:textColor="@color/sputnik_pink"
            android:gravity="end"
            android:id="@+id/tv_refund_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="50"
            style="@style/TextView.Body2"/>
    </LinearLayout>
    <View
        android:id="@+id/v_second_divider"
        android:visibility="gone"
        android:layout_marginStart="@dimen/margin_default"
        android:layout_marginEnd="@dimen/margin_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_refund"
        style="@style/main_divider_style"/>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnApply"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginTop="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginHorizontal="@dimen/margin_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_second_divider"
        style="@style/Button.PinkButton"/>
    <androidx.appcompat.widget.AppCompatButton
        android:enabled="true"
        android:textColor="@color/track_gray"
        android:id="@+id/subsStopButton"
        android:text="@string/settings_subscriptions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnApply"
        style="@style/Button.TransparentButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>
