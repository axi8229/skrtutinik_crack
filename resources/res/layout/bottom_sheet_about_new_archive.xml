<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <View
        android:layout_gravity="center"
        android:id="@+id/view5"
        android:background="@drawable/background_bottom_sheet_drag_handle"
        android:layout_width="33dp"
        android:layout_height="4dp"
        android:layout_marginTop="@dimen/margin_default"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/layout_manufacturers"
        android:background="@drawable/background_bottom_sheet"
        android:paddingBottom="@dimen/margin_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small">
        <ImageView
            android:layout_gravity="center"
            android:layout_width="200dp"
            android:layout_height="160dp"
            android:layout_marginTop="@dimen/margin_large"
            android:src="@drawable/ic_video_frame_play_horizontal"/>
        <TextView
            android:textSize="@dimen/text_20"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_title"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_start_end"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginRight="@dimen/margin_start_end"
            android:layout_marginHorizontal="@dimen/margin_start_end"
            style="@style/TextView.Header1"/>
        <TextView
            android:textSize="@dimen/text_14"
            android:gravity="center"
            android:layout_gravity="center"
            android:id="@+id/tv_subtitle"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_start_end"
            android:layout_marginTop="@dimen/margin_default_plus"
            android:layout_marginRight="@dimen/margin_start_end"
            android:layout_marginHorizontal="@dimen/margin_start_end"
            style="@style/TextView.Body1"/>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_apply"
            android:layout_marginLeft="@dimen/margin_start_end"
            android:layout_marginTop="60dp"
            android:layout_marginRight="@dimen/margin_start_end"
            android:layout_marginBottom="@dimen/margin_large"
            android:layout_marginHorizontal="@dimen/margin_start_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            style="@style/Button.BlueButton.Radius12"/>
    </LinearLayout>
</LinearLayout>
