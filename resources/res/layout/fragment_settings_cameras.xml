<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:title="@string/settings_camera_title"/>
    <ScrollView
        android:id="@+id/root"
        android:scrollbars="none"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="@android:color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/l_main_widget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@+id/iv_main_camera"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="spread_inside">
                    <TextView
                        android:textSize="@dimen/text_14"
                        android:id="@+id/tvAddressTitle"
                        android:padding="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:layout_marginBottom="@dimen/margin_medium"
                        android:layout_marginHorizontal="@dimen/margin_start_end"
                        android:layout_marginVertical="@dimen/margin_medium"
                        style="@style/TextView.Body2"/>
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv_main_camera"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="@dimen/margin_start_end"
                    android:layout_marginRight="@dimen/margin_start_end"
                    android:layout_marginHorizontal="@dimen/margin_start_end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/l_main_widget"/>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/layoutName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_start_end"
                    android:layout_marginRight="@dimen/margin_start_end"
                    android:layout_marginHorizontal="@dimen/margin_start_end"
                    app:layout_constraintTop_toBottomOf="@+id/iv_main_camera">
                    <TextView
                        android:textSize="@dimen/text_smallest"
                        android:id="@+id/tv_door_title"
                        android:padding="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:text="@string/widget_configure_widget_name"
                        style="@style/TextView.Body2"/>
                    <EditText
                        android:gravity="start|top"
                        android:id="@+id/etName"
                        android:background="@drawable/bg_comment"
                        android:paddingTop="@dimen/margin_small"
                        android:paddingBottom="@dimen/margin_small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_small"
                        android:paddingStart="@dimen/padding_default"
                        android:paddingEnd="@dimen/padding_default"
                        android:importantForAutofill="no"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:enabled="true"
                    android:textColor="@color/white"
                    android:id="@+id/btnSave"
                    android:layout_marginLeft="@dimen/margin_start_end"
                    android:layout_marginRight="@dimen/margin_start_end"
                    android:layout_marginBottom="@dimen/margin_medium"
                    android:text="@string/btn_save"
                    android:layout_marginHorizontal="@dimen/margin_start_end"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/Button.BlueButton.Radius12"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:id="@+id/viewWait"
                android:background="@color/transparent_half"
                android:focusable="true"
                android:visibility="gone"
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>
                <TextView
                    android:textSize="18sp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp"
                    android:text="@string/widget_configure_load_data"
                    app:layout_constraintBottom_toTopOf="@+id/ivPreview"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
