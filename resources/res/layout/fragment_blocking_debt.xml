<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        app:cardCornerRadius="12dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@color/white"
            android:paddingBottom="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_close"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                android:foreground="@drawable/circle_ripple"
                android:src="@drawable/ic_circle_close"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <ImageView
                android:id="@+id/iv_block"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_domofon_blocked"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv_close"/>
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_large"
                android:layout_marginHorizontal="@dimen/margin_large"
                app:layout_constraintTop_toBottomOf="@+id/iv_block"
                style="@style/TextView.Body2"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_default"
                app:cardCornerRadius="12dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_notice">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/white"
                    android:padding="@dimen/padding_default"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_payment_title"
                        android:background="@drawable/bg_yellow_rounded"
                        android:padding="@dimen/margin_small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/TextView.Body2"/>
                    <ImageView
                        android:id="@+id/iv_payment_settings"
                        android:background="@drawable/circle_ripple"
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_settings_outline_gray"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_payment_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_payment_title"/>
                    <TextView
                        android:textSize="36sp"
                        android:id="@+id/tv_price"
                        android:paddingLeft="0dp"
                        android:paddingTop="10dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_payment_title"
                        style="@style/TextView.Header2"/>
                    <View
                        android:id="@+id/v_divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_price"
                        style="@style/main_divider_style"/>
                    <TextView
                        android:id="@+id/tv_partner_title"
                        android:paddingLeft="0dp"
                        android:paddingTop="10dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="10dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="10dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/v_divider"
                        style="@style/TextView.Title1"/>
                    <TextView
                        android:textColor="@color/black"
                        android:gravity="start"
                        android:id="@+id/tv_partner_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_partner_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/tv_partner_title"
                        app:layout_constraintTop_toTopOf="@+id/tv_partner_title"
                        style="@style/TextView.Title2"/>
                    <TextView
                        android:textColor="@color/sputnik_pink"
                        android:id="@+id/tv_action"
                        android:background="?attr/selectableItemBackground"
                        android:paddingLeft="0dp"
                        android:paddingTop="5dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="5dp"
                        app:layout_constraintTop_toBottomOf="@+id/tv_partner_title"
                        style="@style/TextView.Body2"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_apply"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_large"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginHorizontal="@dimen/margin_default"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cv_payment"
                style="@style/Button.BlueButton.Radius12"/>
            <androidx.appcompat.widget.AppCompatButton
                android:enabled="true"
                android:textColor="@color/track_gray"
                android:id="@+id/btn_reject"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginTop="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:layout_marginHorizontal="@dimen/margin_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_apply"
                style="@style/Button.TransparentButton"/>
            <TextView
                android:gravity="center"
                android:id="@+id/tv_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btn_reject"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
