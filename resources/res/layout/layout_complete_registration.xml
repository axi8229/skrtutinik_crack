<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_start_end"
    android:layout_marginTop="@dimen/margin_medium"
    android:layout_marginRight="@dimen/margin_start_end"
    android:layout_marginHorizontal="@dimen/margin_start_end">
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@drawable/background_card_blue_light"
        android:padding="@dimen/padding_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_alert_outline"
            android:tint="@color/sputnik_blue"/>
        <TextView
            android:textSize="13sp"
            android:textColor="@color/sputnik_black"
            android:id="@+id/tv_title"
            android:padding="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            style="@style/TextView.Body1"/>
    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:textColor="@color/white"
        android:id="@+id/btnApply"
        android:paddingLeft="@dimen/padding_default"
        android:paddingRight="@dimen/padding_default"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginBottom="@dimen/margin_default"
        android:paddingHorizontal="@dimen/padding_default"
        style="@style/Button.BlueButton.Radius12"/>
</LinearLayout>
