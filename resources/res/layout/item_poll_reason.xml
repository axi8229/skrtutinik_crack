<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_content"
    android:tag="layout/item_poll_reason_0"
    android:background="@drawable/bg_poll_reason"
    android:paddingLeft="@dimen/padding_default"
    android:paddingRight="@dimen/padding_default"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_default"
    android:paddingHorizontal="@dimen/padding_default">
    <TextView
        android:textSize="@dimen/text_small"
        android:textColor="@color/sputnik_black"
        android:id="@+id/tv_selected_category_title"
        android:tag="binding_1"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_marginVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/cb_checked"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/TextView.Body2"/>
    <CheckBox
        android:textColorSecondary="@color/sputnik_black"
        android:id="@+id/cb_checked"
        android:tag="binding_2"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:button="@drawable/drawable_checkbox"
        android:buttonTint="@color/cb_tint"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>
