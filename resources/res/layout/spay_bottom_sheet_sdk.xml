<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sbss_ll_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardCornerRadius="@dimen/spay_28dp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/sbss_fcv_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/sbss_aciv_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_sdk_successful"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <include
        android:id="@+id/sbss_include_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spay_default_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        layout="@layout/spay_swipe_indicator"/>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/sbss_fcv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sbss_include_indicator"/>
</androidx.constraintlayout.widget.ConstraintLayout>
