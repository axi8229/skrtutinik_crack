<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_default"
        app:cardCornerRadius="12dp">
        <LinearLayout
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_title_2"
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/title"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_start_end"
                android:layout_marginTop="32dp"
                android:layout_marginRight="@dimen/margin_start_end"
                android:text="Изменить контактный номер"
                android:layout_marginHorizontal="@dimen/margin_start_end"
                style="@style/TextView.Body2"/>
            <EditText
                android:textSize="14sp"
                android:textColor="@color/large_text"
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_start_end"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_start_end"
                android:hint="+7 (999) 000-00-00"
                android:maxLength="18"
                android:inputType="phone"
                android:fontFamily="@font/opensans_semibold"
                android:layout_marginHorizontal="@dimen/margin_start_end"
                style="@style/EditText"/>
            <androidx.appcompat.widget.AppCompatButton
                android:enabled="false"
                android:id="@+id/btn_apply"
                android:paddingLeft="@dimen/padding_default"
                android:paddingTop="14dp"
                android:paddingRight="@dimen/padding_default"
                android:paddingBottom="14dp"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_start_end"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_start_end"
                android:layout_marginBottom="@dimen/margin_small"
                android:text="Изменить"
                android:layout_marginHorizontal="@dimen/margin_start_end"
                android:paddingHorizontal="@dimen/padding_default"
                android:paddingVertical="14dp"
                style="@style/Button.BlueButton.Radius12"/>
            <androidx.appcompat.widget.AppCompatButton
                android:enabled="true"
                android:textColor="@color/sputnik_blue"
                android:id="@+id/btn_back"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/margin_default"
                android:layout_marginRight="@dimen/margin_default"
                android:text="Вернуться"
                android:layout_marginHorizontal="@dimen/margin_default"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/Button.TransparentButton"/>
            <ProgressBar
                android:id="@+id/pb_request_apartments"
                android:visibility="invisible"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_small"
                android:indeterminate="true"
                android:layout_marginStart="@dimen/margin_default"
                android:layout_marginEnd="@dimen/margin_default"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
