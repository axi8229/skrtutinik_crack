<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/button_rounded_white"
        android:padding="12dp"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/accept_address_title"
            style="@style/TextLarge"/>
        <TextView
            android:textSize="18sp"
            android:textColor="@color/colorTextDarkHint"
            android:gravity="center"
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/raleway_medium"/>
        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:src="@drawable/illustration_mascotte_success"
            android:adjustViewBounds="true"
            android:layout_marginVertical="@dimen/margin_default"/>
        <androidx.appcompat.widget.AppCompatButton
            android:enabled="true"
            android:textColor="@color/white"
            android:id="@+id/btnAcceptAddress"
            android:text="@string/accept_address_accept"
            app:layout_constraintVertical_bias="1"
            style="@style/Button.BlueButton.Radius12"/>
        <androidx.appcompat.widget.AppCompatButton
            android:enabled="true"
            android:textColor="@color/colorRed"
            android:id="@+id/btnDeclineAddress"
            android:text="@string/accept_address_decline"
            style="@style/Button.TransparentButton"/>
    </LinearLayout>
</ScrollView>
