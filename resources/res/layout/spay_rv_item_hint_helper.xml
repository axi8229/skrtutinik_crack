<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingLeft="@dimen/spay_hint_margin_horizontal"
    android:paddingRight="@dimen/spay_hint_margin_horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/spay_hint_margin_horizontal">
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/spay_srihh_actv_dash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/spay_dash"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/spay_srihh_actv_hint"
        style="@style/SpayHintTextStyle"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:gravity="start|center_vertical"
        android:id="@+id/spay_srihh_actv_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spay_12dp"
        android:layout_marginBottom="@dimen/spay_12dp"
        android:text="@string/spay_not_enough_money_to_pay"
        android:layout_marginStart="@dimen/spay_8dp"
        android:layout_marginVertical="@dimen/spay_12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/spay_srihh_aciv_dismiss_hint"
        app:layout_constraintStart_toEndOf="@+id/spay_srihh_actv_dash"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1"
        style="@style/SpayHintTextStyle"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/spay_srihh_aciv_dismiss_hint"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="@dimen/spay_24dp"
        android:layout_height="@dimen/spay_24dp"
        android:src="@drawable/spay_ic_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintTop_toTopOf="@+id/spay_srihh_actv_hint"
        app:tint="@color/spay_ic_cross_color"/>
</androidx.constraintlayout.widget.ConstraintLayout>
