<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ru.yoomoney.sdk.gui.widget.text.TextHeadline1View
        android:ellipsize="end"
        android:id="@+id/title"
        android:paddingTop="@dimen/ym_spaceXS"
        android:paddingBottom="@dimen/ym_spaceXS"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/ym_spaceXS"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_goneMarginEnd="@dimen/ym_spaceM"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon"
        android:padding="@dimen/ym_spaceXS"
        android:layout_width="@dimen/ym_space3XL"
        android:layout_height="@dimen/ym_space3XL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</merge>
