<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background_card_blue_light"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="116dp">
        <TextView
            android:textColor="@color/black"
            android:gravity="start"
            android:id="@+id/domofon_calls_view"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_small_plus"
            app:layout_constraintBottom_toBottomOf="@+id/domofon_calls_value_view"
            app:layout_constraintEnd_toStartOf="@+id/domofon_calls_value_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/domofon_calls_value_view"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/TextView.Body2"/>
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/domofon_calls_value_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small_plus"
            android:thumb="@drawable/thumb_selector"
            android:layout_marginEnd="@dimen/margin_small_plus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:track="@drawable/track_selector"/>
        <TextView
            android:textColor="@color/large_text"
            android:gravity="start"
            android:id="@+id/domofon_calls_hint"
            android:padding="0dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/domofon_calls_view"
            app:layout_constraintStart_toStartOf="@+id/domofon_calls_view"
            app:layout_constraintTop_toBottomOf="@+id/domofon_calls_value_view"
            style="@style/TextView.Body3"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</merge>
