<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/spay_cv_bnpl_root"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    style="@style/SpayCard.Style">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/spay_cl_selected_card"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <spay.sdk.view.BnplLogoCompositeView
            android:id="@+id/spay_aciv_bnpl_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/spay_ic_bnpl_off"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/spay_actv_bnpl_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spay_cv_bnt_text_bottom_margin"
            android:text="@string/spay_bnpl_button_title"
            android:layout_marginStart="@dimen/spay_large_margin"
            app:layout_constraintBottom_toTopOf="@+id/spay_actv_bnpl_subtitle"
            app:layout_constraintStart_toEndOf="@+id/spay_aciv_bnpl_icon"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            style="@style/SpayCard.TitleTextStyle"/>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/spay_actv_bnpl_subtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/spay_bnpl_off_button_subtitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/spay_actv_bnpl_title"
            app:layout_constraintTop_toBottomOf="@+id/spay_actv_bnpl_title"
            style="@style/Spay.Card.Content"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/spay_sclbb_aciv_switch"
            android:layout_width="@dimen/spay_40dp"
            android:layout_height="@dimen/spay_24dp"
            android:src="@drawable/spay_ic_switch_bnpl_off"
            app:layout_constraintBottom_toBottomOf="@+id/spay_actv_bnpl_subtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/spay_actv_bnpl_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
