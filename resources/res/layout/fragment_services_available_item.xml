<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/fragment_services_available_item_0"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    app:cardCornerRadius="12dp">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="@dimen/text_title_2"
            android:textColor="@color/black"
            android:id="@+id/serviceName"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Бесключевой доступ"
            style="@style/TextView.Title2"/>
        <TextView
            android:textColor="@color/sputnik_black"
            android:id="@+id/serviceDescription"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Наш домофон узнает вас и откроет дверь"
            style="@style/TextView.Body2"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/servicePrice"
            android:paddingTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8 ₽/месяц"
            style="@style/TextView.Body3"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
