<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/sberImage"
        android:layout_width="@dimen/ym_space3XL"
        android:layout_height="@dimen/ym_space3XL"
        android:src="@drawable/ym_ic_sberpay_info"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/ym_sber_pay_description"
        android:maxLines="3"
        android:includeFontPadding="false"
        android:layout_marginStart="@dimen/ym_spaceL"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sberImage"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Text.Body"/>
</androidx.constraintlayout.widget.ConstraintLayout>
