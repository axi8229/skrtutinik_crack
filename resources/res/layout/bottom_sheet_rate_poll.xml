<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">
    <ScrollView
        android:id="@+id/layout_content"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="@dimen/text_title_1"
                android:textColor="@color/sputnik_header_black"
                android:id="@+id/tv_title"
                android:padding="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_start_end"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_start_end"
                android:layout_marginHorizontal="@dimen/margin_start_end"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextView.Header1"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_attention"
                android:background="@drawable/background_card_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_start_end"
                android:layout_marginTop="@dimen/margin_medium"
                android:layout_marginRight="@dimen/margin_start_end"
                android:layout_marginHorizontal="@dimen/margin_start_end">
                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:layout_marginBottom="21dp"
                    android:src="@drawable/ic_bulb_outline"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginVertical="21dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:textColor="@color/colorTextDefault"
                    android:id="@+id/tv_hint"
                    android:padding="0dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:layout_marginBottom="@dimen/margin_default"
                    android:layout_marginStart="@dimen/margin_default"
                    android:layout_marginEnd="@dimen/margin_medium"
                    android:layout_marginVertical="@dimen/margin_default"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView10"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/TextView.Body3.NoPadding"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/constraintLayout5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_top"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_title">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:id="@+id/layout_stars"
                        android:background="@drawable/background_card_rating"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:weightSum="5"
                        android:layout_marginHorizontal="@dimen/margin_start_end"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageButton
                            android:id="@+id/btn_star_1"
                            android:background="@android:color/transparent"
                            android:paddingTop="@dimen/margin_vertical"
                            android:paddingBottom="@dimen/margin_vertical"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawable_rating_empty"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="24dp"
                            android:paddingVertical="@dimen/margin_vertical"/>
                        <ImageButton
                            android:id="@+id/btn_star_2"
                            android:background="@android:color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawable_rating_empty"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="22dp"/>
                        <ImageButton
                            android:id="@+id/btn_star_3"
                            android:background="@android:color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawable_rating_empty"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="22dp"/>
                        <ImageButton
                            android:id="@+id/btn_star_4"
                            android:background="@android:color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawable_rating_empty"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="22dp"/>
                        <ImageButton
                            android:id="@+id/btn_star_5"
                            android:background="@android:color/transparent"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:src="@drawable/drawable_rating_empty"
                            android:minWidth="40dp"
                            android:minHeight="40dp"
                            android:layout_weight="1"
                            android:layout_marginStart="22dp"
                            android:layout_marginEnd="24dp"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:textColor="@color/track_gray"
                    android:gravity="center"
                    android:id="@+id/tv_rate_app"
                    android:background="@android:color/transparent"
                    android:padding="0dp"
                    android:paddingTop="@dimen/margin_small"
                    android:paddingBottom="@dimen/margin_small"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_default"
                    android:textAllCaps="false"
                    android:paddingVertical="@dimen/margin_small"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/TextView.Body2"/>
            </LinearLayout>
            <androidx.core.widget.NestedScrollView
                android:id="@+id/layout_troubles"
                android:visibility="visible"
                android:fadingEdgeLength="40dp"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:maxHeight="400dp"
                android:requiresFadingEdge="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/constraintLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout5">
                    <View
                        android:id="@+id/view_line"
                        android:background="@drawable/background_divider"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:layout_marginHorizontal="@dimen/margin_start_end"/>
                    <TextView
                        android:textColor="@color/sputnik_header_black"
                        android:id="@+id/tv_tell_us"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginTop="@dimen/margin_medium"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:layout_marginHorizontal="@dimen/margin_start_end"
                        style="@style/TextView.Body2"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_reasons"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:layout_marginHorizontal="@dimen/margin_start_end"/>
                    <TextView
                        android:textSize="12sp"
                        android:textColor="@color/sputnik_black"
                        android:id="@+id/tv_comment"
                        android:padding="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginTop="@dimen/margin_default"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:fontFamily="@font/opensans_semibold"
                        android:layout_marginHorizontal="@dimen/margin_start_end"
                        style="@style/TextView.Body1"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/layout_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_default"
                        android:layout_marginTop="@dimen/margin_small"
                        android:layout_marginRight="@dimen/margin_default"
                        android:layout_marginHorizontal="@dimen/margin_default">
                        <EditText
                            android:textSize="@dimen/text_smallest"
                            android:textColor="@color/sputnik_header_black"
                            android:gravity="start|top"
                            android:id="@+id/et_comment"
                            android:background="@drawable/bg_comment"
                            android:paddingTop="@dimen/margin_small"
                            android:paddingBottom="@dimen/margin_small"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxHeight="80dp"
                            android:minHeight="80dp"
                            android:maxLength="250"
                            android:inputType="textMultiLine"
                            android:paddingStart="@dimen/padding_default"
                            android:paddingEnd="@dimen/padding_default"
                            android:importantForAutofill="no"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            style="@style/TextView.Body2"/>
                        <TextView
                            android:textSize="12sp"
                            android:textColor="@color/sputnik_black"
                            android:id="@+id/tv_counter"
                            android:background="@drawable/bg_comment_light"
                            android:paddingLeft="4dp"
                            android:paddingTop="2dp"
                            android:paddingRight="4dp"
                            android:paddingBottom="2dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/margin_small"
                            android:text="0/250"
                            android:fontFamily="@font/opensans_semibold"
                            android:layout_marginEnd="@dimen/margin_default"
                            android:paddingHorizontal="4dp"
                            android:paddingVertical="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            style="@style/TextView.Body1"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </androidx.core.widget.NestedScrollView>
            <androidx.appcompat.widget.AppCompatButton
                android:enabled="false"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/btnApply"
                android:layout_marginLeft="@dimen/margin_start_end"
                android:layout_marginTop="@dimen/margin_top"
                android:layout_marginRight="@dimen/margin_start_end"
                android:layout_marginHorizontal="@dimen/margin_start_end"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
                style="@style/Button.BlueButton.Radius12"/>
            <androidx.appcompat.widget.AppCompatButton
                android:textColor="@color/track_gray"
                android:gravity="center"
                android:id="@+id/btn_cancel"
                android:background="@android:color/transparent"
                android:paddingTop="@dimen/margin_small"
                android:paddingBottom="@dimen/margin_small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_start_end"
                android:layout_marginTop="@dimen/margin_small"
                android:layout_marginRight="@dimen/margin_start_end"
                android:textAllCaps="false"
                android:layout_marginHorizontal="@dimen/margin_start_end"
                android:paddingVertical="@dimen/margin_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                style="@style/TextView.Body2"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:gravity="center"
        android:id="@+id/layout_progress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="200dp">
        <ProgressBar
            android:layout_gravity="center"
            android:id="@+id/pb_loader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/sputnik_blue"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </LinearLayout>
</LinearLayout>
