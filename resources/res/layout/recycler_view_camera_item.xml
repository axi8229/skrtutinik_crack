<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/recycler_view_camera_item_0"
    android:background="?attr/selectableItemBackground"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/padding_default"
    android:paddingEnd="@dimen/padding_default">
    <ImageView
        android:id="@+id/iv_camera_image"
        android:tag="binding_1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:textSize="@dimen/text_18"
        android:textColor="@color/white"
        android:gravity="center"
        android:id="@+id/tv_order_number"
        android:tag="binding_2"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fontFamily="@font/jost_medium"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_camera_image"
        app:layout_constraintStart_toStartOf="@+id/iv_camera_image"
        app:layout_constraintTop_toTopOf="@+id/iv_camera_image"
        style="@style/TextView.Body2"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@+id/iv_hamburger"
        app:layout_constraintStart_toEndOf="@+id/iv_camera_image"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:textColor="@color/black"
            android:ellipsize="end"
            android:id="@+id/tv_camera_name"
            android:tag="binding_3"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingEnd="@dimen/padding_small"
            app:layout_constraintEnd_toStartOf="@+id/iv_hamburger"
            app:layout_constraintStart_toEndOf="@+id/iv_camera_image"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextView.Body2"/>
        <ImageView
            android:id="@+id/iv_locked"
            android:tag="binding_4"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_door_closed_outline"
            android:tint="@color/large_text"/>
    </LinearLayout>
    <TextView
        android:ellipsize="end"
        android:id="@+id/tv_camera_address"
        android:tag="binding_5"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera_image"
        app:layout_constraintEnd_toEndOf="@+id/iv_hamburger"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@+id/iv_camera_image"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera_name"
        style="@style/TextView.Body3"/>
    <ImageView
        android:id="@+id/iv_hamburger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_menu_24"
        app:layout_constraintBottom_toBottomOf="@+id/iv_camera_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_camera_image"/>
    <View
        android:id="@+id/divider_h"
        android:background="@color/sputnik_white"
        android:layout_width="0dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="@dimen/margin_default"
        app:layout_constraintEnd_toEndOf="@+id/iv_hamburger"
        app:layout_constraintStart_toStartOf="@+id/tv_camera_address"
        app:layout_constraintTop_toBottomOf="@+id/tv_camera_address"
        style="@style/main_divider_style"/>
</androidx.constraintlayout.widget.ConstraintLayout>
