<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_family_list_0"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/relativeLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/entryPhoto"
            android:tag="binding_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:scaleType="fitXY"
            android:layout_marginStart="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layout_tv"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:weightSum="2"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="@dimen/margin_start_end"
            app:layout_constraintBottom_toBottomOf="@+id/entryPhoto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/entryPhoto"
            app:layout_constraintTop_toTopOf="@+id/entryPhoto">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/entryName"
                    android:tag="binding_2"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextView.Body2"/>
                <TextView
                    android:textColor="@color/black"
                    android:id="@+id/is_self"
                    android:tag="binding_3"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/family_entry_me"
                    android:layout_marginStart="2dp"
                    style="@style/TextView.Body2"/>
                <TextView
                    android:textColor="@color/sputnik_blue"
                    android:id="@+id/is_admin"
                    android:tag="binding_4"
                    android:padding="0dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="@string/family_entry_admin"
                    android:layout_marginHorizontal="2dp"
                    style="@style/TextView.Body2"/>
            </LinearLayout>
            <TextView
                android:textColor="@color/sputnik_black"
                android:gravity="bottom"
                android:id="@+id/entryPhone"
                android:tag="binding_5"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="0dp"
                style="@style/TextView.Body1"/>
        </LinearLayout>
        <View
            android:background="@color/colorDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/layout_tv"
            app:layout_constraintStart_toStartOf="@+id/layout_tv"
            app:layout_constraintTop_toBottomOf="@+id/layout_tv"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
