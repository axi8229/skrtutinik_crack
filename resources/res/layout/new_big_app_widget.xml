<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_layout"
    android:background="@drawable/bg_new_widget"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/widget_margin"
    android:paddingEnd="@dimen/widget_margin">
    <ImageView
        android:id="@+id/logo_widget"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/ic_our_home_logo_notifications"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>
    <TextView
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="start"
        android:id="@+id/title_widget"
        android:padding="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="@string/title_widget"
        android:shadowColor="@android:color/black"
        android:textAlignment="gravity"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="@dimen/margin_default_widget"
        android:layout_toEndOf="@+id/logo_widget"
        android:layout_alignParentEnd="true"
        style="@style/TextView.Title1.Bold"/>
    <ImageView
        android:id="@+id/settings_widget"
        android:focusable="true"
        android:visibility="gone"
        android:clickable="true"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_settings_outline_gray"
        android:layout_alignParentEnd="true"/>
    <TextView
        android:textSize="@dimen/text_main"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/door_title_widget"
        android:paddingTop="0dp"
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:layout_below="@+id/logo_widget"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_toStartOf="@+id/open_door_widget"
        android:layout_alignParentStart="true"
        style="@style/TextView.Title1"/>
    <TextView
        android:textSize="12sp"
        android:textColor="@color/white"
        android:ellipsize="end"
        android:id="@+id/address_widget"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:layout_below="@+id/door_title_widget"
        android:paddingStart="0dp"
        android:layout_marginEnd="@dimen/margin_small"
        android:layout_toStartOf="@+id/open_door_widget"
        android:layout_alignParentStart="true"
        style="@style/TextView.Body1"/>
    <ImageView
        android:id="@+id/open_door_widget"
        android:focusable="true"
        android:clickable="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:layout_below="@+id/title_widget"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/ic_buttonclose"/>
</RelativeLayout>
