<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/image_view_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="@dimen/ym_spaceM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <FrameLayout
        android:layout_gravity="end|top"
        android:id="@+id/bookmark_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ym_spaceM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ru.yoomoney.sdk.gui.widgetV2.image.IconVectorSmallView
            android:id="@+id/bookmark_icon_view"
            android:background="@drawable/bookmark_circle"
            android:padding="@dimen/bookmark_icon_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:ym_image="@drawable/ic_bookmark"
            app:ym_image_enabled="false"/>
    </FrameLayout>
    <ru.yoomoney.sdk.gui.widget.pager.CirclePageIndicator
        android:id="@+id/page_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:ym_fill_color="@color/color_type_ghost"
        app:ym_page_color="@color/color_ghost"/>
</androidx.constraintlayout.widget.ConstraintLayout>
