<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll_view"
    android:scrollbars="none"
    android:clipToPadding="false"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:title="@string/about_title"/>
        <LinearLayout
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="76dp"
                android:layout_height="76dp"
                android:layout_marginTop="35dp"
                app:srcCompat="@drawable/ic_our_home_logo"/>
            <TextView
                android:textColor="@color/black"
                android:gravity="center"
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:text="@string/about_app_name"
                style="@style/TextView.Header2"/>
            <TextView
                android:textColor="@color/sputnik_black"
                android:gravity="center"
                android:id="@+id/tvAppVersion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/TextView.Body2"/>
            <TextView
                android:textColor="@color/sputnik_black"
                android:gravity="center"
                android:id="@+id/tv_skolkovo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_marginRight="20dp"
                android:text="@string/about_desc"
                app:fontFamily="@font/opensans_regular"
                style="@style/TextView.Body2"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/btnSkolkovo"
                    android:focusable="true"
                    android:visibility="gone"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_skolkovo"/>
                <TextView
                    android:textSize="10sp"
                    android:gravity="center"
                    android:id="@+id/tv_skolkovo_info"
                    android:padding="0dp"
                    android:visibility="gone"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="70dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/btnSkolkovo"
                    app:layout_constraintEnd_toEndOf="@+id/btnSkolkovo"
                    app:layout_constraintStart_toStartOf="@+id/btnSkolkovo"
                    app:layout_constraintTop_toTopOf="@+id/btnSkolkovo"
                    style="@style/TextView.Body3"/>
                <TextView
                    android:textColorLink="@color/sputnik_blue"
                    android:gravity="center"
                    android:id="@+id/btnPrivacyPolicy"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_default"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="@dimen/margin_default"
                    android:layout_marginHorizontal="@dimen/margin_default"
                    app:layout_constraintBottom_toTopOf="@+id/btnUserLicense"
                    app:layout_constraintTop_toBottomOf="@+id/btnSkolkovo"
                    app:layout_constraintVertical_chainStyle="packed"
                    style="@style/TextView.Body2"/>
                <TextView
                    android:textColorLink="@color/sputnik_blue"
                    android:gravity="center"
                    android:id="@+id/btnUserLicense"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    app:layout_constraintBottom_toTopOf="@+id/tvCopyright"
                    app:layout_constraintTop_toBottomOf="@+id/btnPrivacyPolicy"
                    style="@style/TextView.Body2"/>
                <TextView
                    android:textColor="@color/sputnik_black"
                    android:gravity="center"
                    android:id="@+id/tvCopyright"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:text="@string/about_copyright"
                    app:fontFamily="@font/opensans_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    style="@style/TextView.Body3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
