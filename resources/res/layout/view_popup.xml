<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:id="@+id/container"
    android:background="@drawable/bg_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ru.yoomoney.sdk.gui.widget.ContentScrollView
        android:id="@+id/scroll_view"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/ym_spaceXL"
                    android:adjustViewBounds="true"
                    android:contentDescription="@null"/>
            </FrameLayout>
            <ru.yoomoney.sdk.gui.widget.text.TextTitle2View
                android:id="@+id/title"
                android:paddingLeft="@dimen/ym_spaceXL"
                android:paddingRight="@dimen/ym_spaceXL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Text.Title2.Center"/>
            <ru.yoomoney.sdk.gui.widget.text.TextBodyView
                android:layout_gravity="center"
                android:id="@+id/text_content"
                android:paddingLeft="@dimen/ym_spaceXL"
                android:paddingRight="@dimen/ym_spaceXL"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ym_spaceXS"
                android:textAlignment="center"/>
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:id="@+id/list_content"
                android:paddingLeft="@dimen/ym_spaceXL"
                android:paddingRight="@dimen/ym_spaceXL"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ym_spaceXL"/>
        </LinearLayout>
    </ru.yoomoney.sdk.gui.widget.ContentScrollView>
    <FrameLayout
        android:id="@+id/top_container"
        android:background="?attr/colorBgTint"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/close"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="@dimen/ym_spaceM"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:contentDescription="@string/top_bar_content_description_back"
            app:srcCompat="@drawable/ic_close"
            app:tint="?attr/colorTint"/>
        <ru.yoomoney.sdk.gui.widget.button.FlatButtonDisableView
            android:layout_gravity="end|center_vertical"
            android:id="@+id/hide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ym_spaceXS"/>
    </FrameLayout>
    <FrameLayout
        android:layout_gravity="bottom"
        android:id="@+id/bottom_container"
        android:background="@drawable/popup_bottom_to_top_gradient"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/popup_bottom_gradient_min_height">
        <ru.yoomoney.sdk.gui.widget.button.PrimaryButtonView
            android:layout_gravity="center_horizontal"
            android:id="@+id/action"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ym_space2XL"
            android:layout_marginBottom="@dimen/ym_spaceXL"
            android:layout_marginStart="@dimen/ym_spaceXL"
            android:layout_marginEnd="@dimen/ym_spaceXL"/>
    </FrameLayout>
</FrameLayout>
