<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/login_input_container"
    android:background="@color/white"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_default"
        android:layout_marginRight="@dimen/margin_default"
        android:layout_marginHorizontal="@dimen/margin_default">
        <ImageView
            android:id="@+id/iv_first_intercom_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:srcCompat="@drawable/ic_connect_intercom_1"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#0d0c22"
            android:id="@+id/tvCodeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="@string/connect_intercom_code_title"
            android:layout_marginStart="@dimen/margin_small"
            app:fontFamily="@font/raleway_medium"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintLeft_toRightOf="@+id/iv_first_intercom_image"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/iv_first_intercom_image"/>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/colorRed"
            android:id="@+id/tv_timer_connect_code"
            android:visibility="visible"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="@font/raleway_medium"
            app:layout_constraintRight_toRightOf="parent"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivConnect1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small"
            android:adjustViewBounds="true"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_first_intercom_image"
            app:srcCompat="@drawable/ic_connect_intercom_1"/>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ivConnect2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="125dp"
            android:adjustViewBounds="true"
            android:layout_marginStart="@dimen/margin_large"
            app:layout_constraintLeft_toLeftOf="@+id/ivConnect1"
            app:layout_constraintTop_toTopOf="@+id/ivConnect1"
            app:srcCompat="@drawable/ic_connect_intercom_2"/>
        <TextView
            android:textSize="14sp"
            android:textColor="#0d0c22"
            android:id="@+id/tvCodeInfo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/connect_intercom_code_info"
            app:fontFamily="@font/raleway_medium"
            app:layout_constraintBottom_toBottomOf="@+id/ivConnect1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvCodeTitle"
            app:layout_constraintTop_toTopOf="@+id/ivConnect1"/>
        <ImageView
            android:textSize="@dimen/text_main"
            android:textColor="@color/colorBluePrimary"
            android:id="@+id/btnHelp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_question_outline"
            app:tint="@color/black"/>
        <TextView
            android:textStyle="bold"
            android:textColor="@color/blue_text"
            android:gravity="center"
            android:id="@+id/tvNoDomofon"
            android:paddingTop="0dp"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_no_domofon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivConnect2"
            app:layout_constraintVertical_bias="0.8"
            style="@style/TextView.Body2"/>
        <LinearLayout
            android:id="@+id/serviceLoader"
            android:background="@color/white"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
            android:textColor="@color/black"
            android:gravity="center"
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_default"
            android:text="@string/connect_intercom_title"
            app:layout_constraintBottom_toTopOf="@+id/tvCodeTitle"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextLarge"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
