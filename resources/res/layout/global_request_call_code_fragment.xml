<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/global_request_call_code_fragment_0"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/login_input_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_centerVertical="true"
            android:animateLayoutChanges="true"
            app:layout_constraintTop_toBottomOf="@+id/toolbar">
            <TextView
                android:gravity="center"
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:layout_marginRight="22dp"
                android:text="@string/login_request_phone_code_title"
                style="@style/TextLarge"/>
            <TextView
                android:textSize="14sp"
                android:textColor="@color/colorTextDarkHint"
                android:gravity="center"
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                app:fontFamily="@font/raleway_medium"/>
            <TextView
                android:textSize="@dimen/text_main"
                android:textColor="@color/error_code_text"
                android:gravity="center"
                android:id="@+id/tvErrorCode"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:text="@string/login_request_code_error"
                app:fontFamily="@font/opensans_regular"/>
            <TextView
                android:textSize="@dimen/text_main"
                android:textColor="@color/colorBluePrimary"
                android:gravity="center"
                android:id="@+id/btnLoginBySMS"
                android:tag="binding_1"
                android:background="?attr/selectableItemBackground"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_default"
                android:text="@string/login_request_phone_code_login_by_sms"
                app:fontFamily="@font/raleway_medium"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/loader"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/login_input_container"
            app:layout_constraintTop_toTopOf="parent">
            <ProgressBar
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
