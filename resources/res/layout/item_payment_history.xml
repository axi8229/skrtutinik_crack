<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:tag="layout/item_payment_history_0"
    android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_default"
    android:layout_marginTop="@dimen/margin_small"
    android:layout_marginRight="@dimen/margin_default"
    android:layout_marginBottom="@dimen/margin_small"
    android:foreground="?attr/selectableItemBackground"
    android:layout_marginHorizontal="@dimen/margin_default"
    android:layout_marginVertical="@dimen/margin_small">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textAppearance="?attr/textAppearanceBody1"
            android:textColor="@color/track_gray"
            android:id="@+id/payment_intercom"
            android:background="@drawable/bg_rounded_stroke"
            android:paddingLeft="@dimen/margin_small"
            android:paddingTop="4dp"
            android:paddingRight="@dimen/margin_small"
            android:paddingBottom="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_intercom"
            android:paddingHorizontal="@dimen/margin_small"
            android:paddingVertical="4dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:textSize="36sp"
            android:textStyle="bold"
            android:textColor="@color/track_gray"
            android:id="@+id/price_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/payment_intercom"
            style="@style/TextView.Body2"/>
        <View
            android:id="@+id/divider_horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/price_payment"
            style="@style/main_divider_style"/>
        <TextView
            android:textSize="12sp"
            android:textColor="@color/track_gray"
            android:id="@+id/tv_account_bill"
            android:paddingTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_bill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_horizontal"
            style="@style/TextAppearance.AppCompat.Body1"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/tv_account_number"
            android:paddingLeft="@dimen/padding_default"
            android:paddingRight="@dimen/padding_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/padding_default"
            app:layout_constraintBottom_toBottomOf="@+id/tv_account_bill"
            app:layout_constraintStart_toEndOf="@+id/tv_account_bill"
            style="@style/TextAppearance.AppCompat.Body2"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
