<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:title="@string/manage_subscription"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:scrollbars="none"
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/card_root"
                    android:background="@drawable/background_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_start_end"
                    android:layout_marginRight="@dimen/margin_start_end"
                    android:layout_marginHorizontal="@dimen/margin_start_end"
                    app:cardCornerRadius="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/l_addition"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">
                            <TextView
                                android:id="@+id/tv_subscription_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/margin_medium"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                style="@style/Badge"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/track_gray"
                                android:id="@+id/tv_subscription_payed_until"
                                android:padding="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_start_end"
                                android:layout_marginTop="@dimen/margin_default"
                                android:layout_marginRight="@dimen/margin_start_end"
                                android:fontFamily="@font/opensans_regular"
                                android:layout_marginHorizontal="@dimen/margin_start_end"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                style="@style/TextView.Body2"/>
                            <TextView
                                android:textSize="14sp"
                                android:textColor="@color/track_gray"
                                android:id="@+id/tv_subscription_price"
                                android:padding="0dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/margin_start_end"
                                android:layout_marginTop="@dimen/margin_default"
                                android:layout_marginRight="@dimen/margin_start_end"
                                android:layout_marginBottom="@dimen/margin_medium"
                                android:fontFamily="@font/opensans_regular"
                                android:layout_marginHorizontal="@dimen/margin_start_end"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                style="@style/TextView.Body2"/>
                        </LinearLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/item_inactive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    app:layout_constraintBottom_toTopOf="@+id/l_info_price"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_root"
                    app:layout_constraintVertical_bias="0"
                    app:layout_constraintVertical_chainStyle="packed">
                    <TextView
                        android:textColor="@color/sputnik_header_black"
                        android:id="@+id/tv_title_item_paid"
                        android:paddingLeft="0dp"
                        android:paddingTop="0dp"
                        android:paddingRight="0dp"
                        android:paddingBottom="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_start_end"
                        android:layout_marginRight="@dimen/margin_start_end"
                        android:text="@string/services_in_subs"
                        android:layout_marginHorizontal="@dimen/margin_start_end"
                        android:paddingHorizontal="0dp"
                        android:paddingVertical="0dp"
                        style="@style/TextView.Body3"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_sub_services"
                        android:background="@color/white"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:splitMotionEvents="false"
                        android:layout_marginEnd="20dp"
                        android:nestedScrollingEnabled="false"
                        android:layout_marginHorizontal="20dp"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/l_info_price"
                    android:background="@drawable/bg_available_service_info"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_default"
                    app:layout_constraintBottom_toTopOf="@+id/subsStopButton"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">
                    <TextView
                        android:textColor="@color/black"
                        android:id="@+id/tv_info_sub_title"
                        android:paddingBottom="0dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/info_subscription"
                        style="@style/TextView.Header2"/>
                    <TextView
                        android:id="@+id/tvDateService"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subs_expire"
                        style="@style/TextView.Body3"/>
                    <TextView
                        android:id="@+id/tvInfoCompany"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subs_tariffs"
                        android:paddingStart="@dimen/padding_default"
                        style="@style/TextView.Body3"/>
                    <TextView
                        android:id="@+id/tvPriceService"
                        android:paddingTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/subs_tariff_price"
                        style="@style/TextView.Body3"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:textColor="@color/track_gray"
                    android:id="@+id/subsStopButton"
                    android:visibility="gone"
                    android:layout_margin="@dimen/margin_default"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    style="@style/Button.TransparentButton"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <include
        android:id="@+id/cancel_screen"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        layout="@layout/waiting_cancel"/>
</RelativeLayout>
